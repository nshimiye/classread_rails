<%= form_for(@user) do |f| %>
  <% if @user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
      <% @user.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :fname %><br />
    <%= f.text_field :fname %>
  </div>
  <div class="field">
    <%= f.label :lname %><br />
    <%= f.text_field :lname %>
  </div>
  <div class="field">
    <%= f.label :email %><br />
    <%= f.text_field :email %>
  </div>
  
  <% if is_admin? %>
    <div class="field">
      <%= f.label :status %><br/>
      <%= f.select( :status, [['Student','student'], 
                     ['Teaching Assist', 'ta'],
                     ['Teacher','teacher'],['Admin','admin']]) %>
    </div>
  <% end %>
   <div class="field">
        <%= f.label :username %><br />
        <%= f.text_field :username %>
   </div>
    <% if @current_user.nil? %>
       
        <div class="field">
        <%= f.label :password %><br />
        <%= f.password_field :password %>
        </div>
        <div class="field">
        <%= f.label :password_confirmation %><br />
        <%= f.password_field :password_confirmation %>
        </div>
    <% end %>
  <div class="actions">
    <%= f.submit @current_user ? "Update Account" : "Register", :class => 'btn btn-primary btn-large'  %>
  </div>
<% end %>
