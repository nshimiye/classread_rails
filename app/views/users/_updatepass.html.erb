<% if @user %>
<%= form_for(@user, url: updatepass_path(@user._id), method: "POST" ) do |f| %>
  <% if @user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
      <% @user.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  
    <div class="field">
        <%= f.label :old_password %>
        <%= f.password_field :old_password %>
    </div>
    <% if @current_user %>
       
        <div class="field">
        <%= f.label :password %>
        <%= f.password_field :password %>
        </div>
        <div class="field">
        <%= f.label :password_confirmation %>
        <%= f.password_field :password_confirmation %>
        </div>
    <% end %>
  <div class="actions">
    <%= f.submit "Update Password",  :class => 'btn btn-primary btn-large'  %>
  </div>
<% end %>

<% else %>
   <% flash[:error] = 'damn! how did u end up here?'
