<h1>Log In</h1>

<%= form_for :session, :url => login_path, :method => :post do |f| %>

     <% if flash[:error] -%>
       <div id="error_explanation">
         <%= flash[:error] %>
       </div>
     <% end %>
     <% if flash[:notice] -%>
      <div id='notice'><%= flash[:notice] %></div>
     <% end %>
  
     <div class="field">
        <%= f.label "Username or Email" %></br>
        <%= f.text_field :usern %>
     </div>
     
     <div class="field">
       <%= f.label "Password" %></br>
       <%= f.password_field :password %>
     </div>
     <div class="actions">
       <%= f.submit "Log in" %>
     </div>

<% end %>

